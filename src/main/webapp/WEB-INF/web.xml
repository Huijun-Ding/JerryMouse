<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>com.jms.controller.searchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnectServlet</servlet-name>
        <servlet-class>com.jms.controller.ConnectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>visualiserPanierServlet</servlet-name>
        <servlet-class>com.jms.controller.visualiserPanierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>basketPage</servlet-name>
        <jsp-file>/jsp/basket_page.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>searchByKeyWordServlet</servlet-name>
        <servlet-class>com.jms.controller.searchByKeyWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayProductsServlet</servlet-name>
        <servlet-class>com.jms.controller.DisplayProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>/ProductsList</servlet-name>
        <jsp-file>/jsp/products_list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectServlet</servlet-name>
        <url-pattern>/connect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>visualiserPanierServlet</servlet-name>
        <url-pattern>/visualiserPanierServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>basketPage</servlet-name>
        <url-pattern>/basketPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchByKeyWordServlet</servlet-name>
        <url-pattern>/searchByKeyWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayProductsServlet</servlet-name>
        <url-pattern>/DisplayProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/ProductsList</servlet-name>
        <url-pattern>/ProductsList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
